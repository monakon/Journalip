<h1>ユーザー登録</h1>
<%= form_with model: @user do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "border-solid border-2 rounded border-slate-400" %>
  </div>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "border-solid border-2 rounded border-slate-400" %>
  </div>
  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "border-solid border-2 rounded border-slate-400" %>
  </div>
  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "border-solid border-2 rounded border-slate-400" %>
  </div>
  <%= f.submit "登録", class: "btn btn-primary" %>
<% end %>
