<h1>ログイン</h1>
<%= form_with url: login_path do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "border-solid border-2 rounded border-slate-400" %>
  </div>
  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "border-solid border-2 rounded border-slate-400" %>
  </div>
  <%= f.submit "ログイン", class: "btn btn-primary" %>
<% end %>
<%= link_to '登録ページへ', new_user_path %>
