<div class="px-6 sm:px-24 mb-14">
  <h2 class="text-1xl lg:text-2xl mb-2">プロフィール設定</h2>

    <div class="flex flex-col gap-6">

      <div class="items-center px-5 py-5 bg-white border border-white rounded-lg">
        <h3 class="text-lg pb-2"><%= '表示名' %></h3>
        <div class="flex gap-2 md:gap-5">
          <p class="pl-3 text-slate-700 text-sm"><%= @current_user.name %></p>
          <p class="ml-auto mr-2 md:mr-5 text-sm hover:font-bold"><%= link_to '編集', edit_profiles_path %></p>
        </div>
      </div>

      <div class="bg-white px-5 py-5 border border-white rounded-lg">
        <h3 class="text-lg"><%= 'メールアドレス' %></h3>
        <p class="pl-3 pt-2 text-slate-700 text-sm"><%= @current_user.email %></p>
      </div>

    </div>
    <div class="py-10">
      <%= link_to '退会する', user_path(current_user.id), data: {turbo_method: :delete, turbo_confirm: 'okを押すと退会完了となります'}, class: "border rounded-full px-3 py-2 text-stone-600 hover:border-stone-600" %>
    </div>
</div>