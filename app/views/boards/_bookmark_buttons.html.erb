<%# ログインしている場合のみブックマークの有無を表示 %>

<div class="ms-auto">
    <% if current_user %>
        <% if current_user.bookmark?(board) %>
            <%= render 'boards/unbookmark', { board: board } %>
        <% else %>
            <%= render 'boards/bookmark', { board: board } %>
        <% end %>
    <% end %>
</div>